// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Sanctie {
  id          Int      @id @default(autoincrement())
  naam        String
  niveau      Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relatie: Een sanctie kan bij veel straffen horen
  straffen    Straffen[]
}

model Leerling {
  id          Int      @id @default(autoincrement())
  naam        String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relatie: Een leerling kan veel straffen krijgen
  straffen    Straffen[]
}

model Straffen {
  id          Int      @id @default(autoincrement())
  leerlingId  Int
  sanctieId   Int
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  
  // Relaties
  leerling    Leerling @relation(fields: [leerlingId], references: [id], onDelete: Cascade)
  sanctie     Sanctie  @relation(fields: [sanctieId], references: [id], onDelete: Cascade)
  
  // Unieke combinatie
  @@unique([leerlingId, sanctieId])
}